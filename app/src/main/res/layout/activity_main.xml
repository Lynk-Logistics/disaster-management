<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:background="@color/black">

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/settings_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="end"
            android:layout_margin="10dp"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            app:srcCompat="@drawable/ic_settings_black_24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_namee"
            android:textColor="@color/white"
            android:layout_gravity="left"
            android:textSize="30sp"
            android:layout_marginBottom="30dp"
            android:fontFamily="sans-serif-condensed-medium"/>



        <Button
            android:id="@+id/emergency_button"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="339dp"
            android:layout_height="86dp"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="100dp"
            android:layout_margin="10dp"
            android:background="@drawable/rectangle"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="@string/emergency_n_contact"
            android:textSize="15sp" />

        <Button
            android:id="@+id/food_button"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="339dp"
            android:layout_height="86dp"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="100dp"
            android:layout_margin="10dp"
            android:background="@drawable/rectangle"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="@string/food_and_water"
            android:textSize="15sp"
            android:onClick="foodclick"/>

        <Button
            android:id="@+id/medication_button"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="339dp"
            android:layout_height="86dp"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="100dp"
            android:layout_margin="10dp"
            android:onClick="medicationclick"
            android:background="@drawable/rectangle"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="@string/medication"
            android:textSize="15sp" />

        <Button
            android:id="@+id/volunteer_button"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="339dp"
            android:layout_height="86dp"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="100dp"
            android:layout_margin="10dp"
            android:background="@drawable/rectangle"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="@string/volunteering"
            android:textSize="15sp"
            android:onClick="volunteerclick"/>

    </LinearLayout>


</RelativeLayout>