<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/gradient"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:layout_marginTop="45dp"
        android:id="@+id/title"
        android:textStyle="bold"
        android:fontFamily="@font/montserrat"
        android:textColor="@color/white"
        android:textSize="23sp"
        android:text="Set up emergency contacts"
        android:layout_marginBottom="15dp"
        app:layout_constraintTop_toBottomOf="@id/back"
        android:layout_marginStart="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"/>

    <RelativeLayout
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="200dp">

        <View
            android:background="#000000"
            android:alpha="0.1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <ImageView
            android:layout_marginEnd="5dp"
            android:layout_toLeftOf="@+id/add_contacts"
            android:id="@+id/add"
            android:padding="4dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="18dp"
            android:tint="@color/white"
            android:src="@drawable/icon_round_add"
            android:layout_width="25dp"
            android:layout_height="25dp"/>

        <TextView
            android:id="@+id/add_contacts"
            android:layout_marginEnd="25dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="15dp"
            android:drawableTint="@color/white"
            android:buttonTint="@color/white"
            android:backgroundTint="@color/white"
            android:gravity="center"
            android:textSize="13sp"
            android:layout_marginBottom="15dp"
            android:textColor="@color/white"
            android:outlineAmbientShadowColor="@color/white"
            android:shadowColor="@color/white"
            android:text="Add from contacts"
            android:layout_width="wrap_content"
            android:layout_height="30dp" />

        <TextView
            android:layout_marginTop="15dp"
            android:id="@+id/contact1"
            android:drawableTint="@color/white"
            android:buttonTint="@color/white"
            android:backgroundTint="@color/white"
            android:gravity="center"
            android:textSize="13sp"
            android:layout_marginBottom="15dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="15dp"
            android:text="CONTACT 1"
            android:textColor="@color/white"
            android:outlineAmbientShadowColor="@color/white"
            android:shadowColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="30dp"/>

        <ImageView
            android:id="@+id/user"
            android:padding="3dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/contact1"
            android:tint="@color/white"
            android:src="@drawable/icon_user"
            android:layout_width="30dp"
            android:layout_height="30dp"/>

        <com.google.android.material.textfield.TextInputEditText
            android:layout_marginStart="65dp"
            android:hint="Name"
            android:padding="10dp"
            android:id="@+id/name_one"
            android:textColor="@color/white"
            android:textColorHint="@color/grey"
            android:layout_below="@+id/contact1"
            android:background="@drawable/round_border_white"
            android:layout_marginEnd="15dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>

        <ImageView
            android:padding="3dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="40dp"
            android:layout_below="@id/user"
            android:tint="@color/white"
            android:src="@drawable/icon_phone"
            android:layout_width="30dp"
            android:layout_height="30dp"/>

        <com.google.android.material.textfield.TextInputEditText
            android:layout_marginStart="65dp"
            android:hint="Mobile"
            android:layout_marginTop="15dp"
            android:padding="10dp"
            android:id="@+id/number_one"
            android:textColor="@color/white"
            android:textColorHint="@color/grey"
            android:layout_below="@+id/name_one"
            android:background="@drawable/round_border_white"
            android:layout_marginEnd="15dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="200dp">

        <View
            android:background="#000000"
            android:alpha="0.1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <ImageView
            android:layout_marginEnd="5dp"
            android:layout_toLeftOf="@+id/add_contacts_2"
            android:id="@+id/add_2"
            android:padding="4dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="18dp"
            android:tint="@color/white"
            android:src="@drawable/icon_round_add"
            android:layout_width="25dp"
            android:layout_height="25dp"/>

        <TextView
            android:id="@+id/add_contacts_2"
            android:layout_marginEnd="25dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="15dp"
            android:drawableTint="@color/white"
            android:buttonTint="@color/white"
            android:backgroundTint="@color/white"
            android:gravity="center"
            android:textSize="13sp"
            android:layout_marginBottom="15dp"
            android:textColor="@color/white"
            android:outlineAmbientShadowColor="@color/white"
            android:shadowColor="@color/white"
            android:text="Add from contacts"
            android:layout_width="wrap_content"
            android:layout_height="30dp" />

        <TextView
            android:layout_marginTop="15dp"
            android:id="@+id/contact2"
            android:drawableTint="@color/white"
            android:buttonTint="@color/white"
            android:backgroundTint="@color/white"
            android:gravity="center"
            android:textSize="13sp"
            android:layout_marginBottom="15dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="15dp"
            android:text="CONTACT 2"
            android:textColor="@color/white"
            android:outlineAmbientShadowColor="@color/white"
            android:shadowColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="30dp"/>

        <ImageView
            android:id="@+id/user2"
            android:padding="3dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/contact2"
            android:tint="@color/white"
            android:src="@drawable/icon_user"
            android:layout_width="30dp"
            android:layout_height="30dp"/>

        <com.google.android.material.textfield.TextInputEditText
            android:layout_marginStart="65dp"
            android:hint="Name"
            android:padding="10dp"
            android:id="@+id/name_two"
            android:textColor="@color/white"
            android:textColorHint="@color/grey"
            android:layout_below="@+id/contact2"
            android:background="@drawable/round_border_white"
            android:layout_marginEnd="15dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>

        <ImageView
            android:padding="3dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="40dp"
            android:layout_below="@id/user2"
            android:tint="@color/white"
            android:src="@drawable/icon_phone"
            android:layout_width="30dp"
            android:layout_height="30dp"/>

        <com.google.android.material.textfield.TextInputEditText
            android:layout_marginStart="65dp"
            android:hint="Mobile"
            android:layout_marginTop="15dp"
            android:padding="10dp"
            android:id="@+id/number_two"
            android:textColor="@color/white"
            android:textColorHint="@color/grey"
            android:layout_below="@+id/name_two"
            android:background="@drawable/round_border_white"
            android:layout_marginEnd="15dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>

    </RelativeLayout>

    <TextView
        android:layout_marginTop="50dp"
        android:id="@+id/save"
        android:elevation="2dp"
        android:gravity="center"
        android:textSize="17sp"
        android:textColor="@color/white"
        android:text="Save"
        android:background="@drawable/button_round_mehroon"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="25dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

</LinearLayout>